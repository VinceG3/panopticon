#!/usr/bin/env ruby
require 'thor'

class Panopticon < Thor
  desc "daemonize", "run daemonized"
  def daemonize
    exec "bin/god -c Godfile -l ./log/daemon.log -P ./log/panopticon.pid"
  end

  desc "console", "run in console"
  def console
    exec "bin/god -c Godfile -D --log-level debug"
  end

  desc "stop", "stop service"
  def stop
    exec "bin/god quit"
  end
end

Panopticon.start(ARGV)